<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/accountant"

            android:layout_marginTop="64dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/payva_green"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textAlignment="center"
              android:text="William Brown"
              android:fontFamily="@font/payva_font"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              android:layout_below="@+id/profile_image"
              android:id="@+id/name"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textAlignment="center"
              android:text="Accountant"
              android:fontFamily="@font/payva_font"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="12sp"
              android:layout_below="@+id/name"
              android:id="@+id/position"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/fullscreen_content"
                  tools:context=".Launcher"
                  android:layout_below="@+id/position"
                  android:orientation="vertical"
                  android:paddingTop="16dp"
                  android:paddingEnd="8dp"
                  android:paddingStart="8dp">


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginTop="32dp"
                card_view:cardBackgroundColor="#E7E7E7"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp">

            <!-- Main Content View -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:padding="16dp">

                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="2"
                          android:text="Detailed Report For\nMax Mc."
                          android:textAlignment="center"
                          android:textColor="@android:color/black"
                          android:textSize="16sp"
                          android:fontFamily="@font/payva_font"
                />

                <LinearLayout android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                android:orientation="horizontal">


                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:text="Fourchette Buffet"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="3"
                              android:text="19.03.2019-13:24"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="Lunch"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="14$"
                              android:textAlignment="viewEnd"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">


                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:text="Fourchette Buffet"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="3"
                              android:text="20.03.2019-12:57"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="Lunch"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="19$"
                              android:textAlignment="viewEnd"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">


                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:text="MAX Petrol"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="3"
                              android:text="20.03.2019-16:02"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="Petrol"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="60$"
                              android:textAlignment="viewEnd"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">


                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:text="Grand Sport"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="3"
                              android:text="20.03.2019-19:37"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="Gym"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="300$"
                              android:textAlignment="viewEnd"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">


                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:text="Speed Taxi"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="3"
                              android:text="20.03.2019-21:23"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="Taxi"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="12$"
                              android:textAlignment="viewEnd"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </LinearLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1">

                    <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:layout_alignParentEnd="true"
                              android:text="Total $405"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textColor="@android:color/black"
                              android:fontFamily="@font/payva_font"
                    />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Generate Expense Report"
                android:layout_marginTop="32dp"
                android:textColor="@color/payva_green"/>

    </LinearLayout>

    <ImageView android:layout_width="70dp"
               android:layout_height="16dp"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="8dp"
               android:src="@drawable/payva"/>

</RelativeLayout>